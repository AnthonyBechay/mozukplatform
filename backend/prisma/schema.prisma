generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        String    @id @default(cuid())
  customId  String?   @unique
  name      String
  email     String?
  phone     String?
  company   String?
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

enum ProjectTag {
  MOZUK_MARINE
  MOZUK
  MISC
}

enum ProjectStatus {
  COMPLETE_SOLVED
  COMPLETE_NOT_SOLVED
  ON_GOING
  CANCELLED
}

enum DocumentType {
  INVOICE
  REPORT
  OTHERS
}

enum DocumentStatus {
  SUBMITTED
  NOT_SUBMITTED
}

model Project {
  id              String        @id @default(cuid())
  projectId       String?       @unique
  name            String
  description     String?
  status          ProjectStatus @default(ON_GOING)
  projectDate     DateTime?
  projectLocation String?
  projectTag      ProjectTag    @default(MISC)
  clientId        String
  client          Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  documents       Document[]
}

model Document {
  id             String         @id @default(cuid())
  documentId     String?        @unique
  documentName   String
  documentDate   DateTime?
  documentType   DocumentType   @default(OTHERS)
  documentStatus DocumentStatus @default(NOT_SUBMITTED)
  documentLink   String?
  
  // Invoice-specific fields
  amount         Float?
  paid           Boolean?
  
  projectId      String
  project        Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}
